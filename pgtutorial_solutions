# http://pgexercises.com/questions/basic
# retrieve everything from a table
select * from cd.facilities;

# retrieve specific columns from a table
select name, membercost from cd.facilities;

# control which rows are retrieved
select * from cd.facilities where membercost > 0

# control which rows are retrieved, part 2
select facid, name, membercost, monthlymaintenance from cd.facilities where membercost > 0 and membercost < monthlymaintenance * .02;

# basic string searches
select * from cd.facilities where name like '%Tennis%';

# matching against multiple possible values
select * from cd.facilities where facid in (1,5);

# classify results into buckets
select name, 
  case when monthlymaintenance > 100 then 'expensive'
  when monthlymaintenance < 100 then 'cheap'
  end 
from cd.facilities

# working with dates
select memid, surname, firstname, joindate
from cd.members
  where joindate > '2012-09-01';

# removing duplicates, and ordering results
select surname 
from cd.members
order by surname
limit 10

# combining results from multiple queries
select surname 
  from cd.members
UNION ALL
select name
  from cd.facilities;

# simple aggregation
select max(joindate)
from cd.members;

# more aggregation
(no answer)

# http://pgexercises.com/questions/joins
# inner join
# hint: http://www.w3schools.com/sql/sql_join_inner.asp
select starttime
from cd.bookings
inner join cd.members
on cd.bookings.memid=cd.members.memid
where firstname = 'David' and surname = 'Farrell';

# inner join 2
 
select starttime, name
from cd.bookings
inner join cd.facilities
on cd.bookings.facid=cd.facilities.facid
where name like 'Tennis Court %' 
and starttime >= '2012-09-21 00:00:00' 
and starttime < '2012-09-22 00:00:00';



